<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="500.0" minWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.GameMenuController">
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="14.0" layoutY="250.0" mnemonicParsing="false" onAction="#continueGameButtonPressed" prefHeight="55.0" prefWidth="225.0" text="Continue">
               <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Button>
            <Label layoutX="169.0" layoutY="110.0" text="Game Menu">
               <font>
                  <Font name="Bell MT Bold" size="30.0" />
               </font>
            </Label>
            <Label layoutX="191.0" layoutY="10.0" text="BlockD" textFill="#5d0d64e8">
               <font>
                  <Font name="Gill Sans Ultra Bold Condensed" size="40.0" />
               </font>
               <effect>
                  <Reflection />
               </effect>
            </Label>
            <Button layoutX="261.0" layoutY="250.0" mnemonicParsing="false" onAction="#newGameButtonPressed" prefHeight="55.0" prefWidth="225.0" text="New Game">
               <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Button>
            <Label layoutX="18.0" layoutY="200.0" text="Do you want to start a new game or continue a last game?">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button layoutX="15.0" layoutY="15.0" mnemonicParsing="false" onAction="#homeButtonPressed" text="Home">
               <font>
                  <Font name="Times New Roman" size="16.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </center>
</BorderPane>
