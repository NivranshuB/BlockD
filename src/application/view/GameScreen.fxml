<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="500.0" minWidth="500.0" onKeyReleased="#keyPressed" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.GameScreenController">
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="163.0" layoutY="110.0" text="Game Screen">
               <font>
                  <Font name="Bell MT Bold" size="30.0" />
               </font>
            </Label>
            <Label layoutX="191.0" layoutY="10.0" text="BlockD" textFill="#5d0d64e8">
               <font>
                  <Font name="Gill Sans Ultra Bold Condensed" size="40.0" />
               </font>
               <effect>
                  <Reflection />
               </effect>
            </Label>
            <Button layoutX="422.0" layoutY="439.0" mnemonicParsing="false" onAction="#helpButtonPressed" text="Help">
               <font>
                  <Font name="Times New Roman" size="16.0" />
               </font>
            </Button>
            <Label fx:id="totalScore" layoutX="380.0" layoutY="197.0" text="Score:" />
            <Label fx:id="regionScore" layoutX="380.0" layoutY="226.0" text="Region:" />
            <Label fx:id="targetScore" layoutX="380.0" layoutY="261.0" text="Target:" />
            <Label fx:id="timer" layoutX="380.0" layoutY="298.0" text="Timer:" />
            <Label fx:id="level" layoutX="380.0" layoutY="164.0" text="Level:" />
            <Button layoutX="15.0" layoutY="15.0" mnemonicParsing="false" onAction="#homeButtonPressed" text="Home">
               <font>
                  <Font name="Times New Roman" size="16.0" />
               </font>
            </Button>
            <AnchorPane fx:id="boardRep" layoutX="46.0" layoutY="164.0" prefHeight="274.0" prefWidth="288.0" />
            <Label fx:id="help" layoutX="28.0" layoutY="97.0" text="Help: Use arrow keys to move along the board, and 'b' to break area" />
            <TextField fx:id="levelField" layoutX="422.0" layoutY="160.0" prefHeight="25.0" prefWidth="70.0" />
            <TextField fx:id="totalScoreField" layoutX="422.0" layoutY="193.0" prefHeight="25.0" prefWidth="70.0" />
            <TextField fx:id="regionScoreField" layoutX="422.0" layoutY="222.0" prefHeight="25.0" prefWidth="70.0" />
            <TextField fx:id="targetScoreField" layoutX="422.0" layoutY="257.0" prefHeight="25.0" prefWidth="70.0" />
            <TextField fx:id="timerField" layoutX="422.0" layoutY="294.0" prefHeight="25.0" prefWidth="70.0" />
         </children>
      </Pane>
   </center>
</BorderPane>
